    </div>

    <script>
        $(document).ready(function () {
            // Initialize jQuery validation
            $('#customerForm').validate({
                rules: {
                    CustomerName: {
                        required: true,
                        minlength: 1
                    },
                    Chooseyourtype: {
                        required: true
                    },
                    Company_Business_Name: {
                        required: true
                    },
                    Password: {
                        required: true,
                        minlength: 6
                    },
                    ConfirmPassword: {
                        required: true,
                        minlength: 6,
                        equalTo: "#Password"
                    },
                    RegisteredEmailId: {
                        required: true,
                        email: true
                    },
                    RegisteredPhoneNumber: {
                        required: true,
                        minlength: 1,
