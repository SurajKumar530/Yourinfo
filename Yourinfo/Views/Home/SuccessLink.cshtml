@model LinkModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thank You for Joining Us</title>
    <link href="~/createlink.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @* <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet"> *@

    <script>
        function extractDomain(url) {
            try {
                var parsedUrl = new URL(url);
                return parsedUrl.origin; // Returns the domain including protocol (e.g., https://example.com)
            } catch (e) {
                console.error('Invalid URL');
                return '#';
            }
        }

        $(document).ready(function () {
            var fullUrl = '@Model.URL';
            var domainUrl = extractDomain(fullUrl);
            $('#dashboardLink').attr('href', domainUrl);
        });
    </script>
    <style>
        body {
            background-color: #f8f9fa;
            padding-top: 50px;
        }

        .container {
            max-width: 600px;
        }

        .thank-you-panel {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            text-align: center;
        }

            .thank-you-panel h1 {
                color: #28a745;
                font-size: 2.5rem;
            }

            .thank-you-panel p {
                color: #333;
                font-size: 1.1rem;
            }

        .btn-primary {
            background-color: #28a745;
            border: none;
        }

            .btn-primary:hover {
                background-color: #218838;
            }

        .btn-secondary {
            border: 1px solid #28a745;
            color: #28a745;
        }

            .btn-secondary:hover {
                background-color: #e2e6ea;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="thank-you-panel">
            <h1>Thank You for Joining Us!</h1>
            <h5>We’re excited to have you on board. Your subscription is now complete, and you’ll start receiving our updates, offers, and exclusive content right in your inbox.</h5>
            <h4>As a member, you can now:</h4>
            <ul class="list-unstyled">
                <li><i class="fa fa-check-circle"></i> Access exclusive content</li>
                <li><i class="fa fa-check-circle"></i> Get early access to new features</li>
                <li><i class="fa fa-check-circle"></i> Enjoy special offers and promotions</li>
            </ul>
            <a id="dashboardLink" href="#" class="btn btn-primary">Go to Dashboard</a>
        </div>
    </div>
</body>
</html>
