@model CustomerDetails
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Personal Details View</title>

    <link href="~/preview/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="~/preview/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/preview/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/preview/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/preview/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/preview/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/preview/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/preview/css/style.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="~/preview/js/main.js"></script>
    <script src="~/preview/vendor/typed.js/typed.module.js"></script>
    <script src="~/preview/vendor/bootstrap/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            // When a tag with class 'open-modal' is clicked
            $('.open-modal').click(function (e) {
                e.preventDefault(); // Prevent the default action (e.g., following the link)
                $('#myModal').modal('show'); // Show the modal
            });
        });
    </script>
</head>

<body>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top header-inner-pages">
        <div class="container d-flex align-items-center justify-content-between">
            <a href="#" class="logo"><img src="~/preview/img/logo.png" alt="yourinfo" class="img-fluid"></a>
        </div>
    </header><!-- End Header -->

    <main id="main">

        <!-- ======= Breadcrumbs Section ======= -->
        <section class="breadcrumbs">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <h2>Presonal Details</h2>
                </div>
            </div>
        </section><!-- Breadcrumbs Section -->
        <!-- ======= Portfolio Details Section ======= -->
        <section id="portfolio-details" class="portfolio-details">
            <div class="container">

                <div class="row gy-4">

                    <div class="col-lg-4">
                        <div class="portfolio-details-slider swiper">
                            <div class="swiper-wrapper align-items-center">
                                <div class="swiper-slide">
                                    <img src="@Model.logoPath" alt="">
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="col-lg-8">
                        <div class="portfolio-info">
                            <h3>Personal information</h3>
                            <ul>
                                <li><strong>Name</strong>: @Model.CustomerName</li>
                                <li><strong>Company/Bussiness Name</strong>: @Model.Company_Business_Name</li>
                                <li><strong>Owner Name</strong>: @Model.OwnerFounder_Name</li>
                                <li><strong>Custom Field</strong>: @Model.CustomField</li>
                            </ul>
                        </div>
                        <div class="portfolio-description">
                            <h2>@Model.AboutService</h2>
                            <p>
                                @Model.AboutUs
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section><!-- End Portfolio Details Section -->
        <!-- ======= Portfolio Section ======= -->
        <div id="portfolio" class="paddsection">

            <div class="container">
                <div class="section-title text-center">
                    <h2>Gallery</h2>
                </div>
            </div>

            <div class="container">

                <div class="row portfolio-container">

                    @foreach (var item in Model.GalleryImages)
                    {
                        <div class="col-lg-4 col-md-6 portfolio-item filter-card">
                            <img src="@item.ImagePath" class="img-fluid" alt="">
                            @*   <div class="portfolio-info">
                        <a href="@item.ImagePath" data-gallery="portfolioGallery" class="portfolio-lightbox preview-link" title="App 1"><i class="bx bx-plus"></i></a>
                        </div> *@
                        </div>

                    }

                </div>

            </div>

        </div><!-- End Portfolio Section -->
        <!-- ======= Journal Section ======= -->
        <div id="journal" class="text-left paddsection">

            <div class="container">
                <div class="section-title text-center">
                    <h2>Contact US</h2>
                </div>
            </div>

            <div class="container">
                <div class="journal-block">
                    <div class="row">
                        <div class="col-lg-4 col-md-4">
                            <div class="journal-info">
                                <div class="journal-txt">
                                    <h4>Address </h4>
                                    <p class="separator">
                                        @Model.Address, @Model.City,@Model.States,@Model.CountryName @Model.Pincode
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <div class="journal-info">
                                <div class="journal-txt">
                                    <h4>Phone Number/WhatsApp Number </h4>
                                    <p class="separator">
                                        @Model.RegisteredPhoneNumber / @Model.WhatsappNumber
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <div class="journal-info">
                                <div class="journal-txt">
                                    <h4>Registered Email</h4>
                                    <p class="separator">
                                        @Model.RegisteredEmailId
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div><!-- End Journal Section -->

    </main><!-- End #main -->

    <!-- Modal QR -->
       <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Scan QR Code and Get Detail</h5>
                </div>
                <div class="modal-body" style="margin: 14px 28%;">
                    <img src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=http://www.google.com">
                </div>
            </div>
        </div>
    </div>

    <!--End Modal QR -->
    <!-- ======= Footer ======= -->
    <div id="footer" class="text-center">
        <div class="container">
            <div class="socials-media text-center">

                <ul class="list-unstyled">
                    <li><a href="tel:@Model.RegisteredPhoneNumber"><i class="bi bi-telephone-forward-fill"></i></a></li>
                    <li><a href="https://api.whatsapp.com/send?phone=@Model.WhatsappNumber"><i class="bi bi-whatsapp"></i></a></li>
                    <li><a href="smsto:@Model.RegisteredPhoneNumber"><i class="bi bi-chat-dots"></i></a></li>
                    <li><a href="mailto:@Model.RegisteredEmailId"><i class="bi bi-envelope-at"></i></a></li>
                    <li><a href="#" data-toggle="modal" data-target="#QR" class="open-modal"><i class="bi bi-qr-code-scan"></i></a></li>
                    <li><a href="@Model.FacebookCode"><i class="bi bi-facebook"></i></a></li>
                    <li><a href="@Model.TwitterLink"><i class="bi bi-twitter"></i></a></li>
                    <li><a href="@Model.InstagramLink"><i class="bi bi-instagram"></i></a></li>
                    <li><a href="@Model.LinkdinLink"><i class="bi bi-linkedin"></i></a></li>
                </ul>

            </div>

            <p>&copy; Copyrights Yoursinfo. All rights reserved.</p>

        </div>
    </div><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/preview/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/preview/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/preview/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/preview/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/preview/vendor/typed.js/typed.umd.js"></script>
    <script src="~/preview/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/preview/js/main.js"></script>
</body>

</html>