@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    @* <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" /> *@
    <style>
        /* Custom styles can be added here */
        body {
            background-color: #f8f9fa;
        }

        .access-denied-container {
            max-width: 400px;
            margin: auto;
            padding: 20px;
            background-color: #ffffff;
            border: 1px solid #ced4da;
            border-radius: 5px;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
            margin-top: 100px;
        }

            .access-denied-container h2 {
                text-align: center;
                margin-bottom: 20px;
            }
    </style>
</head>
<body>
    <div class="access-denied-container">
        <img src="~/admin/assets/images/FixAccessDenied.png" class="img-fluid rounded" alt="user">
        <p>You do not have permission to view this page</p>
        <p>Please check your credentials and try again.</p>
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-primary d-inline-flex align-items-center mt-3" href="@Url.Action("Index","Admin")"><i class="ri-home-4-line"></i>Back to Home</a>
        }
        else
        {
            <a class="btn btn-primary d-inline-flex align-items-center mt-3" href="@Url.Action("Index","Account")"><i class="ri-home-4-line"></i>Back to Home</a>
        }
    </div>
</body>
</html>
