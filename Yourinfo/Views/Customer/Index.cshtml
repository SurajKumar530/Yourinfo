@model CustomerDetails
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Personal Details View</title>

    <link href="~/preview/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="~/preview/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/preview/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/preview/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/preview/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/preview/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/preview/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/preview/css/style.css" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery-3.5.1.slim.min.js"></script>
    @* <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script> *@
    <script src="~/js/popper.min.js"></script>
    @* <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.4/dist/umd/popper.min.js"></script> *@
    <script src="~/preview/js/main.js"></script>
    <script src="~/preview/vendor/typed.js/typed.module.js"></script>
    <script src="~/preview/vendor/bootstrap/js/bootstrap.min.js"></script>
    <style>
        .escape {
            display: inline-block;
            overflow: hidden;
            white-space: nowrap;
        }

        .twoescape:first-of-type {
            animation: showup 3s infinite;
        }

        .threeescape:last-of-type {
            width: 0px;
            animation: reveal 3s infinite;
        }

        .escape:last-of-type span {
            margin-left: -355px;
            animation: slidein 7s infinite;
        }

        @@keyframes showup {
            0% {
                opacity: 0;
            }

            20% {
                opacity: 1;
            }

            80% {
                opacity: 1;
            }

            100% {
                opacity: 0;
            }
        }

        @@keyframes slidein {
            0% {
                margin-left: -800px;
            }

            20% {
                margin-left: -800px;
            }

            35% {
                margin-left: 0px;
            }

            100% {
                margin-left: 0px;
            }
        }

        @@keyframes reveal {
            0% {
                opacity: 0;
                width: 0px;
            }

            20% {
                opacity: 1;
                width: 0px;
            }

            30% {
                width: 355px;
            }

            80% {
                opacity: 1;
            }

            100% {
                opacity: 0;
                width: 355px;
            }
        }


        /* Basic styling for the body */
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            background: linear-gradient(135deg, #f4f4f4 50%, #e2e2e2 50%);
            color: #333;
            padding: 0;
            margin: 0;
        }

        /* Header styling with gradient and animation */
        header {
            background: linear-gradient(135deg, #4CAF50, #2e8b57);
            color: white;
            text-align: center;
            padding: 20px;
            animation: fadeIn 2s ease-out;
        }

        /* Animation for header */
        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        /* Main content styling */
        main {
            padding: 20px;
        }

        /* Styling for the introduction section */
        .introduction {
            background: linear-gradient(145deg, #ffffff, #f0f0f0);
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            animation: slideIn 1s ease-out;
        }

        /* Animation for sections */
        @@keyframes slideIn {
            from {
                transform: translateY(20px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        /* Call to action styling */
        .call-to-action {
            margin-top: 30px;
            text-align: center;
        }

            .call-to-action h3 {
                margin-bottom: 10px;
            }

            .call-to-action p {
                margin-bottom: 20px;
            }

    </style>
</head>

<body>
    <div class="col-sm-12 col-lg-12 col-md-12">
        <div class="card">           
            <section class="introduction">
                <h2 class="twoescape">WellCome User !!</h2>
                <p>Thank you for visiting our website. We are delighted to have you here. Explore our content and learn more about what we have to offer.</p>
                <div class="call-to-action">
                    <h3>Get Started</h3>
                    <p>Join us today and start exploring all the amazing features we have to offer. Click the button below to view your website !</p>
                    <a href="/@Model.FullURL" target="_blank" rel="noopener noreferrer" class="btn">View Website</a>
                </div>
            </section>
           
        </div>
    </div>
</body>

</html>